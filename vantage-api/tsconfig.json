{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@middlewares/*": ["middlewares/*"],
      "@miscellaneous/*": ["miscellaneous/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@users/*": ["users/*"],
      "@currency/*": ["currency/*"],
      "@courses/*": ["courses/*"],
      "@payments/*": ["payments/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "../vantage-client"]
}
